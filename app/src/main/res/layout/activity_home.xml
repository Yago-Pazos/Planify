<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FC"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/logo_planify"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Planify"
                android:textStyle="bold"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/btnLogout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"
                android:contentDescription="Cerrar sesiÃ³n" />
        </LinearLayout>

        <!-- SALUDO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola ðŸ‘‹"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AquÃ­ tienes un resumen de tus proyectos."
            android:textColor="#666666"
            android:layout_marginBottom="20dp" />

        <!-- NUEVO PROYECTO -->
        <Button
            android:id="@+id/btnNewProject"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="+ Nuevo Proyecto"
            android:backgroundTint="#5B4BEB"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- BUSCADOR -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Buscar proyectos..."
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- FILTROS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos"
                android:textStyle="bold"
                android:background="@drawable/card_background"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En curso"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completados"
                android:padding="8dp" />
        </LinearLayout>

        <!-- CARD PROYECTO -->
        <LinearLayout
            android:id="@+id/cardProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activo"
                android:textColor="#2ECC71"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redesign Sitio Web"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ActualizaciÃ³n completa de la identidad visual y UX."
                android:textColor="#666666"
                android:layout_marginBottom="12dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="65" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
