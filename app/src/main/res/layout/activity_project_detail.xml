<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Breadcrumb -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Proyectos / Detalle"
            android:textColor="#5B4BEB"
            android:layout_marginBottom="8dp" />

        <!-- Título + botón -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Redesign Sitio Web"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNewTask"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+ Nueva Tarea"
                android:backgroundTint="#5B4BEB"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Progreso -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progreso del proyecto"
            android:textStyle="bold" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="65"
            android:layout_marginBottom="16dp" />

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tabBoard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tablero de tareas"
                android:textStyle="bold"
                android:textColor="#5B4BEB"
                android:layout_marginEnd="24dp" />

            <TextView
                android:id="@+id/tabTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo (2)"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- ================= TABLERO ================= -->
        <HorizontalScrollView
            android:id="@+id/layoutBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- PENDIENTES -->
                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENDIENTES"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- CONTENEDOR TAREAS -->
                    <LinearLayout
                        android:id="@+id/containerPendingTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Ejemplo -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:padding="12dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tests E2E"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Configurar Cypress"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnAddTaskPending"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="+ Añadir tarea"
                        android:gravity="center"
                        android:textColor="#5B4BEB"
                        android:background="@drawable/input_background"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <!-- EN CURSO -->
                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EN CURSO"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- COMPLETADAS -->
                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMPLETADAS"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- ================= EQUIPO ================= -->
        <LinearLayout
            android:id="@+id/layoutTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alex (tú)"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alex@email.com"
                    android:textColor="#666666" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sara"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sara@email.com"
                    android:textColor="#666666" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
