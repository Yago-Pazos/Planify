<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FFFFFF">

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_card_background"
        android:elevation="6dp"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/logo_planify"
            android:contentDescription="Logo Planify" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planify Pro"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organiza. Colabora. Avanza."
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La plataforma definitiva para equipos 치giles."
        android:textSize="14sp"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- Bot칩n Iniciar sesi칩n -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:padding="0dp"
        android:text="Iniciar sesi칩n"
        android:backgroundTint="#5B4BEB"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginBottom="12dp" />

    <!-- Card Crear cuenta -->
    <LinearLayout
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:background="@drawable/register_card_ripple"
        android:gravity="center"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear cuenta"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#5B4BEB" />
    </LinearLayout>


</LinearLayout>
